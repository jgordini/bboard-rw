# Compose environment values for RC cloud deployment.
# Copy this file to /var/bboard-rw/.env on the instance and adjust secrets.

ENABLE_LETSENCRYPT=true
DOMAIN=uabspark.com
DOMAIN_WWW=www.uabspark.com
LETSENCRYPT_EMAIL=admin@uabspark.com
CLOUDFLARE_DNS_API_TOKEN=replace-with-cloudflare-dns-token

# App container stays local-only behind caddy when TLS is enabled.
WEB_BIND_HOST=127.0.0.1
WEB_PORT=8080
WEB_HTTP_PORT=80
WEB_HTTPS_PORT=443

POSTGRES_DB=realworld
POSTGRES_USER=postgres
POSTGRES_PASSWORD=replace-with-strong-password
POSTGRES_DATA_DIR=/mnt/postgres-data/bboard-rw-db

DATABASE_URL=postgres://postgres:replace-with-strong-password@db/realworld
JWT_SECRET=replace-with-long-random-secret

INITIAL_ADMIN_EMAIL=admin@admin.com
INITIAL_ADMIN_PASSWORD=replace-with-strong-admin-password

# Optional mail settings for password reset flows.
MAILER_EMAIL=m@example.com
MAILER_PASSWD=yourpassword
MAILER_SMTP_SERVER=smtp-mail.outlook.com
